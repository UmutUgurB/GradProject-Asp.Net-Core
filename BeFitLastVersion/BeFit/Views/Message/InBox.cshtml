@using EntityLayer.Concrete
@model List<Message2>


@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Gelen Kutusu</h1>

<table class="table table-bordered">
    <tr>
    <th>#</th>
    <th>Mesaj Konusu</th>
    <th>Gönderici</th>
    <th>Tarih</th>
        <th>Mesajı Aç</th>
    </tr>


    @foreach(var item in Model){
        <tr>
            <td>@item.Subject</td>
            <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>
            <td><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-danger">Mesajı Aç</a></td>



        </tr>





    }
</table>
