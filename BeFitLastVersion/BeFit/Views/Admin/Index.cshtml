@using EntityLayer.Concrete
@model List<User>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Chart.js Kütüphanesi -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .dashboard-box {
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            height: 140px;
            position: relative;
        }

            .dashboard-box:hover {
                transform: translateY(-10px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

        .box1 {
            background-color: #3498db;
        }

        .box2 {
            background-color: #2ecc71;
        }

        .box3 {
            background-color: #e74c3c;
        }

        .box4 {
            background-color: #f1c40f;
        }

        .dashboard-box h2 {
            font-size: 20px;
        }

        .dashboard-box p {
            font-size: 26px;
            font-weight: bold;
        }

        .dashboard-box i {
            font-size: 40px;
            position: absolute;
            top: 10px;
            right: 10px;
            opacity: 0.2;
        }

        .chart-container {
            width: 100%;
            display: flex;
            justify-content: space-around;
            margin-top: 20px;
        }

        .chart-box {
            width: 45%;
        }
    </style>
</head>
<body>
    
    <div class="container mt-5">
        
        <div class="row g-4">
            <div class="col-md-3">
                <div class="dashboard-box box1">
                    <h2>Üye Sayısı</h2>
                    <p>@ViewBag.v1</p>
                    <i class="fas fa-users"></i>
                </div>
            </div>
            <div class="col-md-3">
                <div class="dashboard-box box2">
                    <h2>Program Sayısı</h2>
                    <p>@ViewBag.v2</p>
                    <i class="fas fa-book"></i>
                </div>
            </div>
            <div class="col-md-3">
                <div class="dashboard-box box3">
                    <h2>Hareket Sayısı</h2>
                    <p>@ViewBag.v3</p>
                    <i class="fas fa-dumbbell"></i>
                </div>
            </div>
            <div class="col-md-3">
                <div class="dashboard-box box4">
                    <h2>Aktif Etkinlik Sayısı</h2>
                    <p>@ViewBag.v4</p>
                    <i class="fas fa-apple-alt"></i>
                </div>
            </div>
        </div>

        <div class="chart-container mt-5">
            <div class="chart-box">
                <canvas id="genderChart"></canvas>
            </div>
            <div class="container">
                <h2 class="text-center">Üyelerin Kayıt Oldukları Spor Programlarına Göre Dağılımı</h2>
                <canvas id="barChart"></canvas>
            </div>
        </div>
    </div>
    

    <script>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const ctx = document.getElementById('barChart').getContext('2d');
            const barChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Soldier', 'Gladyatör', 'Şampiyonun Yolu', 'Savaşçı', 'Mamba', 'Şampiyon'],
                    datasets: [{
                        label: 'Değerler',
                            data: [@ViewBag.v6, @ViewBag.v7, @ViewBag.v8, @ViewBag.v9, @ViewBag.v10, @ViewBag.v11],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
    
        const genderCtx = document.getElementById('genderChart').getContext('2d');
        const genderChart = new Chart(genderCtx, {
            type: 'pie',
            data: {
                labels: ['Spor Programı Almayan Üyelerin Sayısı', 'Üye Sayımız'],
                datasets: [{
                    label: 'Üye Dağılımı',
                    data: [@ViewBag.v1 - @ViewBag.v5, @ViewBag.v1 -(@ViewBag.v1 - @ViewBag.v5)], // Örnek veri: 700 Erkek, 534 Kadın
                    backgroundColor: [
                        'rgba(54, 162, 235, 0.6)', // Mavi
                        'rgba(255, 99, 132, 0.6)'  // Kırmızı
                    ],
                    borderColor: [
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 99, 132, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                        enabled: true
                    }
                }
            }
        });

        
    </script>

    <!-- Bootstrap JS (Opsiyonel) -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>





