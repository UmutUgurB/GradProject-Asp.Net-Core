<style>
    .container {
        margin-top: 50px;
        font-family: Arial, sans-serif;
    }

    .video-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        background-color: darkslategray;
        color: white;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        height: 400px;
    }

        .video-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 16px rgba(0, 0, 0, 0.2);
        }

    .card-body {
        padding: 20px;
        text-align: center;
    }

    .card-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 15px;
    }

    .card-text {
        font-size: 16px;
    }

    .card-img-top {
        width: 100%;
        height: 250px;
        object-fit: cover;
        cursor: pointer;
    }

    .card-video {
        display: none;
    }

        .card-video.active {
            display: block;
            width: 100%;
        }
</style>
