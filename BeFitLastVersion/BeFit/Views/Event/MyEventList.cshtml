@using EntityLayer.Concrete
@model List<Activity>


@{
    ViewData["Title"] = "MyEventList";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<style>
    body {
        background-color: #f8f9fa; /* Bootstrap'un varsayılan arka plan rengi */
        color: #343a40; /* Bootstrap'un varsayılan metin rengi */
        font-family: Arial, sans-serif;
    }

    h1 {
        margin-top: 20px;
        margin-bottom: 20px;
        font-size: 2.5rem;
        font-weight: bold;
    }

    .table {
        margin-bottom: 30px;
    }

    th, td {
        text-align: center;
        vertical-align: middle;
    }
</style>
<h1 class="text-center mb-4" style="color: darkslategray;">Oluşturduğum Aktiviteler</h1>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead style="background-color: darkslategray; color: white;">
            <tr>
                
                <th scope="col">Etkinlik Adı</th>
                <th scope="col">Açıklama</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var activity in Model)
            {
                <tr>
                    <td>@activity.ActivityName</td>
                    <td>@activity.ActivityDescription</td>
                </tr>
            }
        </tbody>
    </table>
</div>

